<!DOCTYPE html>
<html>
  <head>
    <title>Mashapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>
    <body>
  <header>
    <div class="header-logo">
      <li><%= link_to image_tag("/logo_image/logo.png",size: "150x80"),"/" %></li>
    </div>
    <ul class="header-menus">
      <% if @current_user  %>
        <li><%= link_to("#{@current_user.name}","/users/#{@current_user.id}")%></li>
        <li><%= link_to("新規投稿","/posts/new")%></li>
        <li><%= link_to("ユーザー一覧","/users/index")%></li>
        <li><%= link_to("みんなの投稿","/posts/index")%></li>
        <li><%= link_to("ログアウト","/users/logout",{method: "post"})%></li>
      <% else %>
        <li> <%= link_to("新規登録","/users/new")%></li>
        <li><%= link_to("みんなの投稿","/posts/index")%></li>
        <li><%= link_to("ログイン","/users/login")%></li>
      <% end %>
    </ul>
  </header>
  <% if flash[:notice] %>
    <div class="flash" >
      <%= flash[:notice] %>
      </div>
  <% end %>
    <%= yield %>
  </body>
</html>
